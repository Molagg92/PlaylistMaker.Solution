@{
    ViewData["Title"] = "Album Details";
}

@model PlaylistMaker.Models.Album
@using PlaylistMaker.Models

<h2>Album Details</h2>
<hr/>
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h3>

@if (@Model.Songs.Count == 0)
{
  <h3> --no songs have been added to this album yet-- </h3>
} 
else
{
  <h3>Songs:</h3>
  <ul>
    @foreach (Song song in Model.Songs)
    {
      <li>@Html.ActionLink($"{song.Title}", "Details", "Songs", new { id = song.SongId})
        <button class="add-to-playlist" data-song-id="@song.SongId">âž•</button>
      </li>
    }
  </ul>

  <!-- The Modal -->
<div class="modal" id="playlistModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add Song to Playlist</h4>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <ul id="playlistList"></ul>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger close-modal-button" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>

}
