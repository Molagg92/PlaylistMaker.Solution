@{
    ViewData["Title"] = "Playlists Page";
}

@using PlaylistMaker.Models;

<h1>Here is a list of playlists</h1>

@if (@Model.Count == 0)
{
	<h3> No Playlists have been added to your list yet! </h3>
}
<ul>
    @foreach (Playlist playlist in Model)
    {
			<li>@Html.ActionLink($"{playlist.Name}", "Details" , new { id = playlist.PlaylistId })</li>
    }
</ul>